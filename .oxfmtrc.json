{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 80,
  "ignorePatterns": [
    ".DS_Store",
    "node_modules",
    "/dist",
    "/package",
    ".env",
    ".env.*",
    "!.env.example",
    "/public",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock"
  ]
}
