{
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": [
    "package.*json",
    "node_modules/",
    "dist/",
    "**/*.min.js",
    "src/assets/",
    "*.d.ts",
    "public/firebase-messaging-sw.js"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "unicorn/no-useless-spread": "off",
    "unicorn/no-new-array": "off"
  }
}
